{% extends 'base.html.twig' %}

{% block title %}Hello CarteController!{% endblock %}

{% block body %}
  
  <h1 class="text-center">Votre Panier</h1>
  {% if items %}
  
  <table class="table">
  
  <thead>
    <tr>
       <th>Produit</th>
       <th>Prix</th>
       <th>couleur</th>
       <th>taille</th>
       <th>Photo</th>
       <th>Quantite</th>
       <th>Total</th>
     <th></th>
     
    </tr>
  
  </thead>
  <tbody>
   {% for item in items %}

   <tr>
     <td>{{ item.produit.titre }}</td>
     <td>{{item.produit.prix}}</td>
     <td>{{item.produit.couleur}}</td>
     <td>{{item.produit.taille}}</td>
     <td> <img src="{{item.produit.photo}} " width="100"></td>
     <td>{{item.quantite }}</td>
     <td>{{item.produit.prix * item.quantite}}€</td>
     <td> <a href="{{path('cart_remove',{id: item.produit.id})}}" class="btn-sm btn-danger">
      <i class="fas fa-trash"></i>
      </a>
      </td>
      
   </tr>
    
   {% endfor %}
  <br>
  
  
  </tbody>
  <tfoot>
    <tr>
       <td colspan="6" class ="text-end">Total:</td>
       <td>{{ total }}€</td>
    </tr>
    
  </tfoot>
  
  
  </table>
     

<button type="button" class="btn btn-primary"><a href="{{path('resa')}}" >Commander</a></button>




  {% else %}
  <p>Votre panier est vide !</p>
  
  
  {% endif %}
  









{% endblock %}
